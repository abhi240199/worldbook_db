<link rel="stylesheet" href="/css/home.css">


<%if(locals.user){%>
    <h1>Create Post</h1>
    <div id="post-blog">
        <form action="/post/create-post" method="POST">
            <textarea name='content' cols="40" rows="3" placeholder="Write a Post"></textarea>
            <button type="submit">Post</button>
        </form>
    </div>
    <%}%>
        <div id='post-list-container'>
            <ul>
                <%for(post of postList){%>
                    <li>
                        <p>
                            <b>
                                <%=post.user.name%>
                            </b>
                            <br>
                            <%=post.content%>
                        </p>
                    </li>
                    <% }%>
            </ul>
        </div>