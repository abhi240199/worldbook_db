                    <button type="submit">Add Post</button>
                </form>
            </div>
            <%}%>
                <div id='post-list-container'>
                    <ul>
                        <%for(post of postList){%>
                            <%-include('_post.ejs')-%>
                                <% }%>
                    </ul>
                </div>
    </div>

</div>
