<link rel='stylesheet' href="/css/friend.css">
<div id="friend-section">
    <aside>
        <h2>Friends list</h2>
        <ul>
            <%for(i of userList){%>
                <li>
                    <div id="dashboard">

                        <div class="dashboard">
                            <div>
                                <br>
                                <img src="<%=i.avatar%>" alt="<%=i.name%>" height="30px" width="30px">
                                <br>
                            </div>
                            <div> <b> <a href="/user/profile/<%=i.id%>">
                                        <%=i.name%>
                                    </a></b>
                            </div>
                            <div><button>Add Friend</button></div>

                            <div><button>Remove </button></div>
                        </div>


                    </div>


                </li>
                <% }%>
        </ul>
    </aside>
</div>